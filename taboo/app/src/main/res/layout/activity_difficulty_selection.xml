<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_level"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DifficultySelectionActivity">

    <View
        android:id="@+id/difficultly_bg"
        android:layout_width="288dp"
        android:layout_height="315dp"
        android:background="@drawable/difficultly_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/easy_bg"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@id/difficultly_bg"
        app:layout_constraintStart_toStartOf="@id/difficultly_bg"
        app:layout_constraintTop_toTopOf="@id/difficultly_bg" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/medium_bg"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@id/difficultly_bg"
        app:layout_constraintStart_toStartOf="@id/difficultly_bg"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hard_bg"
        app:layout_constraintBottom_toBottomOf="@id/difficultly_bg"
        app:layout_constraintEnd_toEndOf="@id/difficultly_bg"
        app:layout_constraintStart_toStartOf="@id/difficultly_bg"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
</androidx.constraintlayout.widget.ConstraintLayout>